#include <stdio.h>

void transformAndSort(int nums[], int n, int result[]) {
    
    for (int i = 0; i < n; i++) {
        if (nums[i] % 2 == 0)
            result[i] = 0;
        else
            result[i] = 1;
    }

    
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (result[j] > result[j + 1]) {
                int temp = result[j];
                result[j] = result[j + 1];
                result[j + 1] = temp;
            }
        }
    }
}

int main() {
    int nums[] = {4, 7, 2, 9, 6};
    int n = sizeof(nums) / sizeof(nums[0]);
    int result[n];

    transformAndSort(nums, n, result);

    printf("Resulting Array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", result[i]);
    }

    return 0;
}
